{% extends 'base.html.twig' %}

{% block title %}Hello HabitatsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h1>Nos Habitats</h1> <div class="habitats"> {% for habitat in habitats %} <div class="habitat"> <h2>{{ habitat.name }}</h2> <img src="{{ asset('images/' ~ habitat.image) }}" alt="{{ habitat.name }}"> <p>{{ habitat.description }}</p> </div> {% endfor %} </div>
{% endblock %}
