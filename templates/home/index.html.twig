{% extends 'base.html.twig' %}

{% block title %}Bienvenue chez Arcadia{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accueil - Zoo</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .navbar {
            background-color: #006400;
            padding: 1em;
            color: white;
            text-align: center;
        }
        .carousel {
            display: flex;
            overflow: hidden;
            width: 100%;
            height: 300px;
            margin-bottom: 2em;
        }
        .carousel img {
            width: 100%;
        }
        .section { margin-top: 40px; text-align: center; /* Centrer le titre */ }
        .section:nth-child(even) {
            background-color: #f9f9f9;
        }
        .section h2 {
            margin-top: 0;
        }
        .footer {
            background-color: #006400;
            color: white;
            text-align: center;
            padding: 1em;
        }
        .image-container {
            text-align: center;
            margin-top: 20px;
        }       

        .image-container img {
            max-width: 100%;
            height: auto;
            border: 2px solid #ccc;    
        } 
        .habitats-grid { display: grid; grid-template-columns: repeat(2, 1fr); /* Deux colonnes */ grid-template-rows: repeat(2, 1fr); /* Deux rangées */ gap: 20px; max-width: 800px; margin: 0 auto; /* Centrer la grille */ } .habitat { display: flex; align-items: center; justify-content: center; padding: 20px; border: 1px solid #ccc; border-radius: 10px; } .habitat-content { text-align: left; }
    </style>
</head>
<body>

    <!-- Navbar -->
    <div class="navbar">
        <h1>Zoo - Accueil</h1>
        <p>Menu Navigation</p>
    </div>

    <!-- Carousel -->
    <div class="carousel">
        <div class="image-container"> 
            <img src="{{ asset('images/croco.png') }}" alt="Description de l'image"> 
        </div>
        <div class="image-container"> 
            <img src="{{ asset('images/dragon.png') }}" alt="Description de l'image"> 
        </div>
        <div class="image-container"> 
            <img src="{{ asset('images/otarie.png') }}" alt="Description de l'image"> 
        </div>
    </div>


    <!-- Section: Habitats -->
    <div class="section"> 
        <h2>Présentation des Habitats</h2>
        <div class="habitats-grid"> 
            {% for habitat in habitats %} 
            <div class="habitat"> 
                <div class="habitat-content"> 
                    <h3>{{ habitat.nom }}</h3> 
                    <p>{{ habitat.description }}</p> 
                </div> 
            </div>
    {% endfor %} 
    </div>
    </div>

    <!-- Section: Services -->
    <div class="section">
        <h2>Présentation des Services</h2>
         {% for service in services %} 
        <div class="service"> 
            <h2>{{ service.nom }}</h2> 
            <p>{{ service.description }}</p> 
        </div> 
        {% endfor %}
    </div>

    <!-- Section: Animaux -->
    <div class="section">
        <h2>Quelques Animaux</h2>
        <p>Description de quelques animaux du zoo...</p>
        {% for animal in animaux %} 
        <div class="service"> 
            <h2>{{ animal.prenom }}</h2> 
            <p>{{ animal.etat }}</p> 
        </div> 
        {% endfor %}
    </div>

    <!-- Footer -->
    <div class="footer">
        <p>Horaires du Zoo : 9h00 - 18h00</p>
        <p>Autres informations...</p>
    </div>

</body>
</html>

{% endblock %}
