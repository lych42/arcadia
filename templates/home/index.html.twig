{% extends 'base.html.twig' %}

{% block title %}Bienvenue chez Arcadia{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accueil - Zoo</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .navbar {
            background-color: #006400;
            padding: 1em;
            color: white;
            text-align: center;
        }
        .carousel {
            display: flex;
            overflow: hidden;
            width: 100%;
            height: 300px;
            margin-bottom: 2em;
        }
        .carousel img {
            width: 100%;
        }
        .section { margin-top: 40px; text-align: center; /* Centrer le titre */ }
        .section:nth-child(even) {
            background-color: #f9f9f9;
        }
        .section h2 {
            margin-top: 0;
        }
        .footer {
            background-color: #006400;
            color: white;
            text-align: center;
            padding: 1em;
        }
        .image-container {
            text-align: center;
            margin-top: 20px;
        }       

        .image-container img {
            max-width: 100%;
            height: auto;
            border: 2px solid #ccc;    
        } 
        .habitats-grid { display: grid; grid-template-columns: repeat(2, 1fr); /* Deux colonnes */ grid-template-rows: repeat(2, 1fr); /* Deux rangées */ gap: 20px; max-width: 800px; margin: 0 auto; /* Centrer la grille */ } .habitat { display: flex; align-items: center; justify-content: center; padding: 20px; border: 1px solid #ccc; border-radius: 10px; } .habitat-content { text-align: left; }
        .services-grid { display: grid; grid-template-columns: repeat(2, 1fr); /* Deux colonnes */ grid-template-rows: repeat(2, 1fr); /* Deux rangées */ gap: 20px; max-width: 800px; margin: 0 auto; /* Centrer la grille */ } .service { display: flex; align-items: center; justify-content: center; padding: 20px; border: 1px solid #ccc; border-radius: 10px; } .service-content { text-align: left; }
        .animal { display: flex; align-items: center; margin-bottom: 20px; } .animal-left .animal-content { order: 1; margin-right: 20px; } .animal-right .animal-content { order: 2; margin-left: 20px; } .animal-content { max-width: 50%; border: 1px solid #ccc; padding: 10px; border-radius: 5px; background-color: #f9f9f9; }
        .animals-grid { display: grid; grid-template-columns: repeat(2, 1fr); /* Deux colonnes */ grid-template-rows: auto; /* Plusieurs rangées selon le nombre d'animaux */ gap: 20px; max-width: 800px; margin: 0 auto; /* Centrer la grille */ } .animal { display: flex; flex-direction: column; /* Alignement vertical */ align-items: center; padding: 20px; border: 1px solid #ccc; border-radius: 10px; background-color: #f9f9f9; } .animal-content { text-align: center; /* Centrer le contenu */ } .animal-image img { max-width: 100%; height: auto; border: 2px solid #ccc; border-radius: 5px; margin-bottom: 10px; }
    </style>
</head>
<body>

    <!-- Navbar -->
    <div class="navbar">
        <h1>Zoo - Accueil</h1>
        <p>Menu Navigation</p>
    </div>

    <!-- Carousel -->
    <div class="carousel">
        <div class="image-container"> 
            <img src="{{ asset('images/croco.png') }}" alt="Description de l'image"> 
        </div>
        <div class="image-container"> 
            <img src="{{ asset('images/dragon.png') }}" alt="Description de l'image"> 
        </div>
        <div class="image-container"> 
            <img src="{{ asset('images/otarie.png') }}" alt="Description de l'image"> 
        </div>
    </div>


    <!-- Section: Habitats -->
    <div class="section"> 
        <h2>Présentation des Habitats</h2>
        <div class="habitats-grid"> 
            {% for habitat in habitats %} 
            <div class="habitat"> 
                <div class="habitat-content"> 
                    <h3>{{ habitat.nom }}</h3> 
                    <p>{{ habitat.description }}</p> 
                </div> 
            </div>
    {% endfor %} 
    </div>
    </div>


    <!-- Section: Services -->
    <div class="section"> <h2>Présentation des Services</h2> <div class="services-grid"> {% for service in services %} <div class="service"> <div class="service-content"> <h3>{{ service.nom }}</h3> <p>{{ service.description }}</p> </div> </div> {% endfor %}
    </div>


    <!-- Section: Animaux -->f
    <div class="section"> <h2>Nos Animaux</h2> <div class="animals-grid"> {% for animal in animaux %} <div class="animal"> <div class="animal-content"> <h3>{{ animal.prenom }}</h3> {% if animal.image %} <div class="animal-image"> <img src="{{ asset('images/' ~ animal.image) }}" alt="{{ animal.prenom }}"> </div> {% endif %} <p>{{ animal.etat }}</p> </div> </div> {% endfor %} </div> </div>


    <!-- Section: Avis -->
   <div class="section"> 
   <h2>Les Avis de Nos Visiteurs</h2> 
   <div class="reviews-grid"> {% for avis in avis %} 
   <div class="review">
   <h3>{{ avis.pseudo }}</h3> 
   <p>"{{ avis.commentaire }}"</p>
   </div> 
   {% endfor %} 
   </div> 
   </div>
   


    <!-- Footer -->
    <footer class="footer"> 
    <div class="footer-column"> 
    <h4>Horaires</h4> 
    <p>Lundi - Vendredi: 9h - 18h</p> 
    <p>Samedi: 10h - 17h</p> 
    <p>Dimanche: Fermé</p> 
    </div> 
    <div class="footer-column"> 
    <h4>Habitats</h4> 
    <ul> 
        <li><a href="{{ path('habitats') }}">Tous les Habitats</a>
        </li> <!-- Ajouter d'autres liens si nécessaire --> 
    </ul> 
    </div> 
    <div class="footer-column"> 
    <h4>Services</h4> 
    <ul> 
        <li><a href="{{ path('services') }}">Nos Services</a>
        </li> <!-- Ajouter d'autres liens si nécessaire --> 
    </ul> 
    </div> 

</body>
</html>

{% endblock %}
